#!/bin/zsh

# Login to lxplus
# ===============
#
# Login to CERN's lxplus server. You can login to either the first available
# node or to a specific node (which is useful if you have a screen session
# running on that node, as screen sessions cannot be accessed from other nodes).
#
# usage: lxplus [--help] [-n|--node <node>] [--no-x11] [-c|--check-host-key]


# Script name
sname=${0##*/}

# Help message
show_help() {
cat <<EOF
usage: ${sname} [--help] [-n|--node <node>] [--no-x11]

Login to CERN's lxplus server. You can login to either the first available
node or to a specific node (which is useful if you have a screen session
running on that node, as screen sessions cannot be accessed from other nodes).

optional arguments:
  -n <node>, --node <node>
               Login to this lxplus node (e.g. 001, 002, etc.)
  --no-x11     Disable X11 forwarding (enabled by default)
  -c, --check-host-key
               Force strict checking of lxplus host key (disabled by default)
  -h, --help   Show this help message and exit
EOF
}


# ----- Parse input arguments -----#

USE_X11=true
CHECK_HOST_KEY=false

while (( $# > 0 )); do
    opt="$1"

    case $opt in
        -h|--help)
            show_help
            exit 0
            ;;
        --no-x11)
            USE_X11=false
            shift
            ;;
        -n|--node)
            node="$2"
            shift
            shift
            ;;
        -c|--check-host-key)
            CHECK_HOST_KEY=true
            shift
            shift
            ;;
        *)
            echo "error: unknown option '$opt'"
            show_help
            exit 1
            ;;
    esac
done


# Get username from scripts repository
USER="$( cd "$( dirname "${(%):-%N}" )" && cat $(pwd)/.username )"


# Check if Kerberos ticket exists
echo "Checking Kerberos tickets..."
klist
k_code=$?  # Return code; 0 if all good, 1 if no ticket

if (( $k_code == 1 )); then
    echo "Enter Kerberos credentials:"
    init-krb
fi


# Get login path
if [[ -z $node ]]; then
    # No node given, let lxplus decide
    login_path="${USER}@lxplus.cern.ch"
else
    # Login to the specific node
    login_path="${USER}@lxplus${node}.cern.ch"
fi

# Login (with or without X11 forwarding and with or without StrictHostKeyChecking)
if [[ $CHECK_HOST_KEY = false ]]; then
    if [[ $USE_X11 = true ]]; then
        echo ">>> ssh -X ${login_path}"
        ssh -X -o StrictHostKeyChecking=no "${login_path}"
    else
        echo ">>> ssh ${login_path}"
        ssh -o StrictHostKeyChecking=no "${login_path}"
    fi
else
    if [[ $USE_X11 = true ]]; then
        echo ">>> ssh -X ${login_path}"
        ssh -X -o StrictHostKeyChecking=yes "${login_path}"
    else
        echo ">>> ssh ${login_path}"
        ssh -o StrictHostKeyChecking=yes "${login_path}"
    fi
fi
